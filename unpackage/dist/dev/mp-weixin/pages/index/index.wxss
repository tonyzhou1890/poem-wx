page {
  background-color: #339999;
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  position: relative;
}
.container .background {
  width: 100%;
  height: 750rpx;
}
.container .index-wrapper {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.container .index-wrapper .title {
  position: absolute;
  top: 200rpx;
  width: 100%;
  text-align: center;
  color: white;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.container .index-wrapper .title .title-text {
  font-size: 28px;
  font-weight: bold;
  line-height: 2.5;
  letter-spacing: 4px;
}
.container .index-wrapper .title .title-sub-text {
  font-size: 14px;
  letter-spacing: 2px;
}
.container .index-wrapper .button-wrapper {
  position: absolute;
  bottom: 400rpx;
  width: 100%;
}
.container .index-wrapper .button-wrapper button {
  width: 78px;
  height: 30px;
  line-height: 26px;
  font-size: 14px;
  background-color: #45aeb6;
  color: white;
  padding: 0;
  border: 2px solid gray;
  border-radius: 10px;
}
.container .index-wrapper .text-link-wrapper {
  position: absolute;
  width: 100%;
  bottom: 20px;
  color: white;
  text-align: center;
  font-size: 14px;
}
.container .index-wrapper .pop-view {
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 100%;
  background-color: white;
  padding: 20px;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.container .index-wrapper .pop-view .close-icon {
  position: absolute;
  margin: 0 auto;
  bottom: 20px;
  left: 50%;
  -webkit-transform: translateX(-20px);
          transform: translateX(-20px);
  width: 40px;
  height: 40px;
}
.container .index-wrapper .pop-view .document {
  width: 100%;
  height: 100%;
}

